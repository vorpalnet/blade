<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE project>
<project basedir="." default="build" name="vorpal-blade-library-framework">
	<property environment="env" />
	<property name="debuglevel" value="source,lines,vars" />



	<target name="init">
		<mkdir dir="build/classes" />
		<copy includeemptydirs="false" todir="build/classes">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="build/classes">
			<fileset dir=".apt_src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	<target name="clean">
		<delete dir="build" />
	</target>
	<target depends="clean" name="cleanall" />
	<target depends="init,build-subprojects,build-project,build-jar,build-javadocs" name="build" />
	<target name="build-subprojects" />
	<target depends="init" name="build-project">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac nowarn="on" debug="true" debuglevel="${debuglevel}" destdir="build/classes" includeantruntime="false" release="8">
			<src path="src" />
			<src path=".apt_src" />
			<classpath refid="vorpal-blade.classpath" />
			<classpath refid="WebLogic System Libraries.libraryclasspath" />	
		</javac>
	</target>

	<target depends="build-project" name="build-jar">
		<jar destfile="build/${ant.project.name}.jar" basedir="build/classes" />
	</target>

	<target name="build-javadocs" depends="build-jar">
		
		<pathconvert property="classpathInName" refid="vorpal-blade.classpath" />
		<echo>Classpath is ${classpathInName}</echo>
		
		
		<javadoc splitindex="true" access="public" additionalparam="-Xdoclint:none" packagenames="org.vorpal.*" sourcepath="src" destdir="build/javadocs" author="true" version="true" use="true" windowtitle="${ant.project.name}">
			<classpath refid="vorpal-blade.classpath" />
			<classpath refid="WebLogic System Libraries.libraryclasspath" />	
			<doctitle><![CDATA[${ant.project.name}]]></doctitle>
			<bottom><![CDATA[<i>Copyright &#169; 2013-2018 Vorpal Networks, LLC. All Rights Reserved.</i>]]></bottom>
			<link href="http://docs.oracle.com/javaee/6/api/" />
		</javadoc>
	</target>
	

	<target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects" />
</project>
