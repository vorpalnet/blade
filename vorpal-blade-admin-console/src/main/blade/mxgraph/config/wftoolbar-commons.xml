<mxDefaultToolbar>
	<add as="open" action="open" icon="svg/folder-open.svg"/>
	<add as="save" action="save" icon="svg/save.svg"/>	
	<add as="exportImage" action="exportImage" icon="svg/image.svg"/>

	<br/><hr/>
	<add as="select" mode="select" icon="svg/mouse-pointer.svg"/>
	<add as="pan" mode="pan" icon="svg/hand-paper.svg"/>
	<add as="connect" mode="connect" icon="svg/connector-straight.svg"><![CDATA[
		function (editor)
		{
			if (editor.defaultEdge != null)
			{
				editor.defaultEdge.style = null;
			}
		}
	]]></add>
	<add as="connect" mode="connect" icon="svg/connector-elbow.svg"><![CDATA[
		function (editor)
		{
			if (editor.defaultEdge != null)
			{
				editor.defaultEdge.style = 'straightEdge';
			}
		}
	]]></add>
	<add as="group" action="group" icon="svg/object-group.svg"/>
	<add as="ungroup" action="ungroup" icon="svg/object-ungroup.svg"/>
	
	<br/><hr/>	
	<add as="Microservice" template="microservice" style="shape=rectangle-landscape" icon="svg/rectangle-landscape.svg"/>
	<add as="Ingress" template="ingress"  style="shape=cloud-download" icon="svg/cloud-download.svg"/>
	<add as="Egress" template="egress"  style="shape=cloud-upload" icon="svg/cloud-upload.svg"/>
	<add as="Subscriber" template="subscriber"  style="shape=user-circle" icon="svg/user-circle.svg"/>
	<add as="Authentication" template="authentication"  style="shape=lock-alt" icon="svg/lock-alt.svg"/>
	<add as="Reference" template="reference"  style="shape=share-alt-square" icon="svg/share-alt-square.svg"/>

	<br/><hr/>
	<add as="cut" action="cut" icon="svg/cut.svg"/>
	<add as="copy" action="copy" icon="svg/copy.svg"/>
	<add as="paste" action="paste" icon="svg/paste.svg"/>
	<add as="delete" action="delete" icon="svg/backspace.svg"/>
	<add as="undo" action="undo" icon="svg/undo.svg"/>
	<add as="redo" action="redo" icon="svg/redo.svg"/>

	<br/><hr/>
	<add as="fit" action="fit" icon="svg/search.svg"/>
	<add as="zoomIn" action="zoomIn" icon="svg/search-plus.svg"/>
	<add as="zoomOut" action="zoomOut" icon="svg/search-minus.svg"/>

	<br/><hr/>
	<add as="tasks" action="toggleTasks" icon="svg/clipboard-check.svg"/>
	<add as="help" action="toggleHelp" icon="svg/question-circle.svg"/>
	<add as="properties" action="showProperties" icon="svg/cog.svg"/>
</mxDefaultToolbar>
