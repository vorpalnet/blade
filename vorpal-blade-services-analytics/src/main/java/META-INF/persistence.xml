<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0"
>

	<persistence-unit name="BladeCDR" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<non-jta-data-source>jdbc/BladeCDR</non-jta-data-source>
		<class>org.vorpal.blade.services.analytics.jpa.Application</class>
		<class>org.vorpal.blade.services.analytics.jpa.Attribute</class>
		<class>org.vorpal.blade.services.analytics.jpa.AttributePK</class>
		<class>org.vorpal.blade.services.analytics.jpa.Event</class>
		<class>org.vorpal.blade.services.analytics.jpa.Session</class>
		<class>org.vorpal.blade.services.analytics.jpa.SessionKey</class>
		<class>org.vorpal.blade.services.analytics.jpa.SessionKeyPK</class>


		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
			<property name="eclipselink.target-server" value="WebLogic" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.logging.level" value="WARNING" />
		</properties>
		
		
	</persistence-unit>

</persistence>
